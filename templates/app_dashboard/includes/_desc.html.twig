<!-- Profile Image -->
<div class="card card-olive card-outline">
    <div class="card-body box-profile">
        <div class="text-center">

            {% if app.user.imageName %}
                <img class="profile-user-img img-fluid img-circle" style="height: 180px;width: 180px;"
                     src="{{ asset('images/users_images/' ~ app.user.imageName)| imagine_filter('thumb') }}"
                     alt="User profile picture">
                {{ dump(asset('images/users_images/' ~ app.user.imageName)| imagine_filter('thumb')) }}
            {% else %}
                <img class="profile-user-img img-fluid img-circle" style="height: 180px;width: 180px;"
                     src="{{ asset('images/template_images/avatar.png')| imagine_filter('thumb') }}"
                     alt="User profile picture">
                {{ dump(asset('images/template_images/avatar.png')| imagine_filter('thumb') ) }}
            {% endif %}
        </div>

        <h3 class="profile-username text-center">{{ app.user.nom|upper }} {{ app.user.prenom|upper }}</h3>

        <p class="text-muted text-center">{{ app.user.fonction|upper }}</p>

        <ul class="list-group list-group-unbordered mb-3">
            <li class="list-group-item">
                <b>Statut</b> <a class="float-right text-olive">
                    <i class="fas fa-circle-notch fa-spin"></i> En ligne
                </a>
            </li>
            <li class="list-group-item">
                <b>Connecté</b> <a class="float-right">
                    {{ app.user.lastConnexion ? app.user.lastConnexion|ago : ' ' }}
                </a>
            </li>
            <li class="list-group-item">
                <b>Déconnecté</b> <a class="float-right">
                    {{ app.user.lastConnexion ? app.user.lastDeconnexion|ago : ' ' }}
                </a>
            </li>
            <li class="list-group-item">
                <b>Post(s)</b> <a class="float-right">0</a>
            </li>
        </ul>

    </div>
    <!-- /.card-body -->
</div>