<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>PASSWORD RESET | HSM</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {{ encore_entry_link_tags('app') }}
</head>
<body class="hold-transition login-page">
<div class="lockscreen-wrapper">
    <div class="lockscreen-logo">
        <h4 class="text-gray">
            <i class="fas fa-toolbox"></i> <b>HOST</b> SCHOOL MANAGMENT
        </h4>
    </div>
    <!-- User name -->
    <div class="lockscreen-name text-bold text-gray text-center">
        <i class="fas fa-user-circle"></i> {{ personnels.nom|upper }} {{ personnels.prenom|upper }}</div>

    <!-- START LOCK SCREEN ITEM -->
    <div class="lockscreen-item">
        <!-- lockscreen image -->
        <div class="lockscreen-image">
            {% if personnels.imageName %}
                <img src="{{ asset('images/users_images/' ~ personnels.imageName)| imagine_filter('thumb') }}"
                     alt="User Image">
            {% else %}
                <img src="{{ asset('images/template_images/avatar.png')| imagine_filter('thumb') }}"
                     alt="User Image">
            {% endif %}
        </div>
        <!-- /.lockscreen-image -->

        <!-- lockscreen credentials (contains the form) -->
        <form method="post"  class="lockscreen-credentials" >
            <div class="input-group mb-3">
                <input type="password" class="form-control" name="password"
                       placeholder="Mot de passe" required>

                <div class="input-group-append">
                    <button type="submit" class="btn bg-olive text-gray">
                        <i class="far fa-lg fa-arrow-alt-circle-right"></i>
                    </button>
                </div>
            </div>
        </form>

    </div>

    <!-- /.lockscreen-item -->
    <div class="help-block text-center">
        Entrez votre mot de passe pour reinitialiser le mot de passe de {{ personnels.nom|upper }} {{ personnels.prenom|upper }}
    </div>
    <div class="text-center">
        <a href="{{ path('app_home') }}">Rentrer au tableau de bord</a>
    </div>

</div>

{{ encore_entry_script_tags('app') }}
<script>
    {% for message in app.flashes('success') %}
    window.notification( 'success' , 'Tout est ok !' , '{{ message }}' )
    {% endfor %}
    {% for message in app.flashes('error') %}
    window.notification( 'error' , 'Attention !' , '{{ message }}' )
    {% endfor %}
    {% for message in app.flashes('warning') %}
    window.notification( 'warning' , 'Important !' , '{{ message }}' )
    {% endfor %}
    {% for message in app.flashes('info') %}
    window.notification( 'info' , 'Information utile !' , '{{ message }}' )
    {% endfor %}
</script>
</body>
</html>